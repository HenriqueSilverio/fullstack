[
  {
    "group": "guest",
    "permissions": [
      {
        "resource": "users/",
        "methods": ["POST"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "users/:id",
        "methods": ["GET", "PUT"],
        "action": "allow"
      }
    ]
  }
]
